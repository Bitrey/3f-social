<!doctype html>
<html lang="it">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="/js/fontawesome.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600,700&display=swap" rel="stylesheet">
    <title>3F</title>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="http://malsup.github.com/jquery.form.js"></script>
</head>

<body>

    <!-- NAVBAR V2 -->
    <nav class="navbar navbar-container navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="/">3F Chat V2</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#social-navbar"
            aria-controls="social-navbar" aria-expanded="false" aria-label="Navbar per schermi piccoli">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="social-navbar">

            <div class="container">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="fas fa-home"></i> Home</a>
                        <div class="underline"></div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/new"><i class="fas fa-plus"></i> Post</a>
                        <div class="underline"></div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/info"><i class="fas fa-info-circle"></i> Informazioni</a>
                        <div class="underline"></div>
                    </li>

                </ul>

                <ul class="navbar-nav ml-auto">
                    <% if(utente) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile"><i class="fas fa-user-circle"></i> <%= utente.username %></a>
                        <div class="underline"></div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                        <div class="underline"></div>
                    </li>
                    <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/google"><i class="fas fa-sign-in-alt"></i> Entra con Google</a>
                        <div class="underline"></div>
                    </li>
                    <% } %>
                </ul>
            </div>

        </div>

    </nav>

    <div id="back-div" style="display: none;" class="container">
        <div class="mt-3">
            <a class="back-link" href="/" class="mt-5"><i class="fas fa-long-arrow-alt-left"></i>
                Torna ai post</a>
        </div>
    </div>