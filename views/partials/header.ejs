<!doctype html>
<html lang="it">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="/js/fontawesome.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600,700&display=swap" rel="stylesheet">
    <title>3F</title>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="http://malsup.github.com/jquery.form.js"></script>
</head>

<body>

    <!-- View profile modal -->
    <div class="modal fade" id="profileModal" tabindex="-1" role="dialog" aria-labelledby="profileModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="profileModalLabel">Visualizza profilo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="profile-body">
                    <div class="profile-loading text-center">
                        <p>
                            <div class="spinner-border text-info" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                            Caricamento del profilo in corso...
                        </p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Chiudi</button>
                    <a role="button" class="btn btn-dark" id="profile-new-page" style="display: none;" href="#" target="_blank">
                        <i class="fas fa-external-link-alt"></i> Visualizza</a>
                </div>
            </div>
        </div>
    </div>

    <!-- NAVBAR V2 -->
    <nav class="navbar navbar-container navbar-expand-lg navbar-light">
        <% if(utente){ %>
            <a class="navbar-brand" href="/courses">Bitrey Classroom</a>
        <% } else { %>
            <a class="navbar-brand" href="/">Bitrey Classroom</a>
        <% } %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#social-navbar"
            aria-controls="social-navbar" aria-expanded="false" aria-label="Navbar per schermi piccoli">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="social-navbar">

            <div class="container">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="fas fa-home"></i> Home</a>
                        <div class="underline"></div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/courses"><i class="fas fa-book"></i> Corsi</a>
                        <div class="underline"></div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/info"><i class="fas fa-info-circle"></i></a>
                        <div class="underline"></div>
                    </li>

                </ul>

                <ul class="navbar-nav ml-auto">
                    <% if(utente) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile"><i class="fas fa-user-circle"></i> <span id="username-span"><%= utente.username %></span></a>
                        <div class="underline"></div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                        <div class="underline"></div>
                    </li>
                    <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/google"><i class="fas fa-sign-in-alt"></i> Entra con Google</a>
                        <div class="underline"></div>
                    </li>
                    <% } %>
                </ul>
            </div>

        </div>

    </nav>

    <div class="container mt-3 mb-1">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(warn && warn.length > 0){ %>
            <div class="alert alert-warning" role="alert">
                <%= warn %>
            </div>
        <% } %>
        <% if(info && info.length > 0){ %>
            <div class="alert alert-info" role="alert">
                <%= info %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>
    <% if(typeof corso != "undefined"){ %>
        <div id="back-div" style="display: none;" class="container mb-1">
            <div class="mt-3">
                <a class="back-link" href="/courses/<%= corso._id %>" class="mt-5">
                    <i class="fas fa-home"></i> Vai alla homepage del corso</a>
            </div>
        </div>
    <% } %>