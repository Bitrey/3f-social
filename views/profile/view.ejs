<%- include ('../partials/header') %>

<link rel="stylesheet" href="/css/easy-autocomplete.min.css">

<div class="container text-center mx-auto">

    <h1 class="text-center m-3"><i class="fas fa-user-circle"></i> Ciao, <%= utente.username %>!</h1>

        <img src="<%= (utente.immagine.tipo == "local") ? "/uploads/" + utente.immagine.indirizzo : utente.immagine.indirizzo %>"
            alt="Immagine utente" class="round-img">

    <p>Nome: <strong><%= utente.nome %></strong></p>
    <p>Cognome: <strong><%= utente.cognome %></strong></p>
    <p>Email: <strong><%= utente.email %></strong></p>
    <p>Username: <strong><%= utente.username %></strong></p>
    <p>Biografia: <strong><%= utente.biografia %></strong></p>
    <% if(utente.residenza.regione){ %>
        <div class="residenza-div mt-1" style="display: flex; align-items: center;" aria-label="breadcrumb">
            <p class="mr-2">Citt√† / Comune: </p>
            <ol class="breadcrumb">
                <li class="breadcrumb-item" id="breadcrumb-regione"><%= utente.residenza.regione %></li>
                <li class="breadcrumb-item" id="breadcrumb-provincia"><%= utente.residenza.provincia %></li>
                <li class="breadcrumb-item" id="breadcrumb-comune"><%= utente.residenza.comune %></li>
            </ol>
        </div>
    <% } %>

    <a href="/profile/edit" role="button" class="btn btn-dark"><i class="fas fa-edit"></i> Modifica profilo</a>

</div>

<script src="/js/jquery.easy-autocomplete.min.js"></script>

<%- include ('../partials/footer') %>